<Window x:Class="exam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">Шлях до файлу:</TextBlock>
        <TextBox Name="DirectoryPathTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="120,10,0,0" />

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0">Слово для пошуку:</TextBlock>
        <TextBox Name="SearchWordTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="120,50,0,0" />

        <Button Name="SearchBtn_" Content="Пошук" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="120,90,0,0" Click="SearchBtn"/>
        <Button Name="SaveToFileButton" Content="Зберегти в файл" HorizontalAlignment="left" VerticalAlignment="Top" Width="150" Margin="50,400,0,0" Click="SaveBtn"/>

        <ProgressBar Name="progressbar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="10,130,0,0" Height="20" Minimum="0" Maximum="100" />

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,170,0,0">Назва файлу:</TextBlock>
        <TextBlock Name="FileNameTB" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,170,0,0" Width="380" />

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,190,0,0">Шлях до файлу:</TextBlock>
        <TextBlock Name="FilePathTB" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,190,0,0" Width="380" />

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,210,0,0">Кількість входження слова:</TextBlock>
        <TextBlock Name="WordCountTB" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,210,0,0" Width="320" />

        <ListBox Name="listbox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="750" Height="150" Margin="10,240,0,0"/>
    </Grid>
</Window>
